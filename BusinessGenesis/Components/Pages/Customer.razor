    private List<string> tagsSeleccionados = new();

    private void AgregarProductos(ChangeEventArgs e)
    {
        if (e.Value is string categoriaSeleccionada && productosPorCategoria.ContainsKey(categoriaSeleccionada))
        {
            // 👉 Limpiar los productos seleccionados anteriores
            tagsSeleccionados.Clear();

            // 👉 Agregar los nuevos productos de la categoría seleccionada
            foreach (var producto in productosPorCategoria[categoriaSeleccionada])
            {
                tagsSeleccionados.Add(producto);
            }

            StateHasChanged(); // ← Forzar que se actualice la interfaz
        }
    }


    private void EliminarTag(string producto)
    {
        tagsSeleccionados.Remove(producto);
        StateHasChanged();
    }


